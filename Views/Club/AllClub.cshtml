@model IEnumerable<Dropbox06.Models.Club>
<p>
    <a asp-action="AddClub">
        Add a Club
    </a>
</p>
@{
    if (Model.Count() < 1)
    {
        <p>No Club in database yet.</p>
    }
    else
    {
        <h3>All Clubs</h3>
        <table border="1">
            <tr>
                <th>Club ID</th>
                <th>Club Name</th>
                <th>Student Capacity</th>
                <th>Department Name</th>
            </tr>
            @foreach (var club in Model)
                {
                    <tr>
                        <td><a asp-controller="Student" asp-action="EnrollClub"
                               asp-route-id="@club.ClubId">
                            @club.ClubId</a></td>
                        <td>@club.ClubName</td>
                        <td><a asp-controller="Student" asp-action="AllClassmate"
                               asp-route-id="@club.ClubId">@club.StudentCapacity</a></td>
                        <td>@club.Department.DepartmentName</td>
                    </tr>
                }
        </table>
    }
}